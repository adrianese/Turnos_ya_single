# Configuración de Variables de Entorno - Turnos-Ya
# Archivo: .env.example
# Copiar a .env y configurar valores reales

# Base de Datos
DB_HOST=localhost
DB_NAME=turnos_ya
DB_USER=turnos_user
DB_PASS=tu_password_seguro_aqui

# Configuración de Aplicación
APP_ENV=production
APP_DEBUG=false
APP_URL=https://tu-dominio.com

# Claves de Encriptación (Generar con: openssl rand -hex 32)
ENCRYPTION_KEY=tu_clave_de_32_caracteres_hex
BACKUP_ENCRYPTION_KEY=tu_clave_de_backup_de_32_caracteres_hex

# Configuración de Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASS=tu_app_password
SMTP_ENCRYPTION=tls
EMAIL_FROM=noreply@tu-dominio.com
EMAIL_FROM_NAME=Turnos-Ya
EMAIL_REPLY_TO=info@tu-dominio.com

# Configuración de Sesiones
SESSION_LIFETIME=3600
SESSION_SECURE=true
SESSION_HTTPONLY=true
SESSION_SAMESITE=Strict

# Configuración de Rate Limiting
RATE_LIMIT_DEFAULT=100
RATE_LIMIT_LOGIN=5
RATE_LIMIT_REGISTER=3

# API Keys
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE
GOOGLE_MAPS_API_KEY=tu_api_key_aqui
RECAPTCHA_SITE_KEY=tu_site_key
RECAPTCHA_SECRET_KEY=tu_secret_key

# Configuración de Logs
LOG_LEVEL=warning
LOG_FILE=/var/log/turnos_ya/app.log
SECURITY_LOG_FILE=/var/log/turnos_ya/security.log

# Configuración de Backup
BACKUP_RETENTION_DAYS=7
BACKUP_NOTIFICATION_EMAIL=admin@tu-dominio.com

# Configuración de Cache
CACHE_DRIVER=file
CACHE_TTL=3600

# Configuración de Notificaciones
NOTIFICATION_EMAIL_FROM=noreply@tu-dominio.com
NOTIFICATION_EMAIL_FROM_NAME=Turnos-Ya

