# Configuración de Base de Datos
DB_HOST=localhost
DB_NAME=mis_turnos
DB_USER=tu_usuario_db
DB_PASS=tu_password_db

# API Key de Gemini (obtén la tuya en https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE

# Configuración de Email (SMTP)
SMTP_HOST=smtp.tu-proveedor.com
SMTP_PORT=587
SMTP_USERNAME=tu_usuario_smtp
SMTP_PASSWORD=tu_password_smtp
SMTP_ENCRYPTION=tls
EMAIL_FROM=noreply@tu-dominio.com
EMAIL_FROM_NAME=Tu App
EMAIL_REPLY_TO=info@tu-dominio.com

# Ejemplos de proveedores SMTP comunes:
#
# Gmail:
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=tu-email@gmail.com
# SMTP_PASSWORD=tu-app-password
